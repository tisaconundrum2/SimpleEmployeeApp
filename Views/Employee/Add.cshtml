@model SimpleEmployeeApp.Models.DomainModels.Employee
@{
    ViewData["Title"] = "Add Employee";
}
<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<!--
    firstName
    middleInitial
    lastName
    address
    dateOfBirth
    socialSecurityNumber
-->
<div class="container">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="firstName">First Name:</label>
            <input type="text" asp-for="firstName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="middleInitial">Middle Initial:</label>
            <input type="text" asp-for="middleInitial" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="lastName">Last Name:</label>
            <input type="text" asp-for="lastName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="address">Address:</label>
            <input type="text" asp-for="address" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="dateOfBirth">Date Of Birth:</label>
            <input type="text" asp-for="dateOfBirth" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="socialSecurityNumber">Social Security Number:</label>
            <input type="hidden" asp-for="socialSecurityNumber" class="form-control" />
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>